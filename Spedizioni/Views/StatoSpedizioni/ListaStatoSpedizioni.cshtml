@model IEnumerable<Spedizioni.Models.AggiornamentoSpedizione>

@{
    ViewBag.Title = "ListaStatoSpedizioni";
}

<h2>ListaStatoSpedizioni</h2>

<p>
    @Html.ActionLink("Aggiorna Stato", "Create", "StatoSpedizioni", new { area = "" }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AggiornamentoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpedizioneId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stato)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Luogo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descrizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataOraAggiornamento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AggiornamentoId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SpedizioneId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stato)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Luogo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descrizione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataOraAggiornamento)
        </td>
        
    </tr>
}

</table>
